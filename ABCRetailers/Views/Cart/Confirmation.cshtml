@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-5 text-center">

    <div class="card shadow p-4" style="max-width: 600px; margin: auto;">
        <div class="text-success" style="font-size: 60px;">
            <i class="fa fa-check-circle"></i>
        </div>

        <h2 class="mt-3">Order Successful!</h2>

        <p class="lead mt-2">
            @ViewBag.Message
        </p>

        <a href="/Product" class="btn btn-outline-primary mt-4">Continue Shopping</a>
        <a href="/Order" class="btn btn-primary mt-4 ms-2">View My Orders</a>
    </div>

</div>
