@using System.Globalization
@model ABCRetailers.Models.ViewModels.OrderCreateViewModel

@{
    ViewData["Title"] = "Edit Order";
    // status choices
    var statuses = new[] { "Submitted", "Processing", "Completed", "Cancelled" };
    string currentStatus = Model?.Status ?? string.Empty;
}

<h2><i class="fas fa-edit"></i> Edit Order</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="UnitPrice" />
            <input type="hidden" asp-for="TotalPrice" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label">Customer</label>
                        <input type="text" class="form-control" value="@Model?.Username" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label">Product</label>
                        <input type="text" class="form-control" value="@Model?.ProductName" readonly />
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Order Date</label>
                <input type="text" class="form-control" value="@(Model?.OrderDate.ToString("yyyy-MM-dd") ?? "")" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Quantity</label>
                <input type="number" class="form-control" value="@(Model?.Quantity.ToString() ?? "0")" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Unit Price</label>
                <input type="text" class="form-control"
                       value="@(Model != null ? Model.UnitPrice.ToString("C", new CultureInfo("en-ZA")) : "")" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Total Price</label>
                <input type="text" class="form-control"
                       value="@(Model != null ? Model.TotalPrice.ToString("C", new CultureInfo("en-ZA")) : "")" readonly />
            </div>

            <!-- Render status options via a server-side loop to avoid C# in attribute area -->
            <div class="form-group mb-3">
                <label class="form-label">Status</label>
                <!-- NOTE: using plain name/id attributes (not asp-for) avoids option tag helper behaviour -->
                <select id="Status" name="Status" class="form-select">
                    @foreach (var s in statuses)
                    {
                        if (string.Equals(currentStatus, s, StringComparison.OrdinalIgnoreCase))
                        {
                            <option value="@s" selected="selected">@s</option>
                        }
                        else
                        {
                            <option value="@s">@s</option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Order
                </button>
                <a asp-action="Details" asp-route-id="@Model?.Id" class="btn btn-info">
                    <i class="fas fa-eye"></i> View Details
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
