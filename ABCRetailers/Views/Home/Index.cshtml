@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center mb-5">
    <h1 class="hero-heading">
        <i class="fas fa-store"></i> Welcome to ABC Retailers!
    </h1>
    <p class="hero-subtitle">
        Shop our premium selection of products and enjoy a seamless experience.
    </p>

    <div class="mt-4">
        <a asp-controller="Login" asp-action="Index" class="btn btn-primary btn-lg me-2">
            <i class="fas fa-sign-in-alt"></i> Login
        </a>
        <a asp-controller="Customer" asp-action="Create" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-user-plus"></i> Register
        </a>
    </div>
</div>
